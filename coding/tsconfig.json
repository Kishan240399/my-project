{
  "compilerOptions": {
    "target": "ES5",                    // Or use ES6 depending on your setup
    "lib": ["dom", "esnext"],            // Includes DOM and ESNext features
    "jsx": "react-jsx",                 // Set for React 17+ (use 'react' for older React versions)
    "moduleResolution": "node",         // Use Node.js module resolution
    "esModuleInterop": true,            // Allow importing CommonJS modules like ES modules
    "allowImportingTsExtensions": true, // Allow importing .tsx extensions directly
    "strict": true,                     // Enable strict type-checking options
    "skipLibCheck": true,               // Skip type-checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforce consistent file casing
    "noEmit": true                      // Don't emit output files (e.g., .js)
  },
  "include": ["src/**/*"],               // Process all files in the 'src' folder
  "exclude": ["node_modules"]            // Exclude the 'node_modules' folder
}
